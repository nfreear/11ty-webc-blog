
<script webc:type="js" webc:is="template">
  /**
   *
   * @attribute tag - Tag for the collection `tag="posts"`
   */

  collectionList(tag);

  function collectionList (tag) {
    const TAG = tag || 'all';

    return collections[TAG].map((post) => `<li class="postlist-item">
        <a href="${post.url}">${post.data.title}</a>
      </li>`)
      .join('');
  }
</script>
